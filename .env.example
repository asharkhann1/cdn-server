# Origin Server Configuration
ORIGIN_PORT=3000
ORIGIN_HOST=localhost

# Edge Server Configuration
EDGE_PORT=3001
EDGE_HOST=localhost

# Storage Configuration
STORAGE_TYPE=disk
STORAGE_PATH=./storage/files
UPLOAD_MAX_SIZE=104857600

# Database
DB_PATH=./storage/metadata.db

# Cache Configuration
CACHE_MAX_SIZE=100
CACHE_TTL=3600000
MEMORY_CACHE_ENABLED=true

# Security
JWT_SECRET=your-secret-key-change-this-in-production
SIGNED_URL_EXPIRY=3600

# Compression
ENABLE_GZIP=true
ENABLE_BROTLI=true

# Origin URL (for edge server to fetch from)
ORIGIN_URL=http://localhost:3000

# Admin API Key (for accessing admin endpoints)
ADMIN_API_KEY=change-me-to-secure-value